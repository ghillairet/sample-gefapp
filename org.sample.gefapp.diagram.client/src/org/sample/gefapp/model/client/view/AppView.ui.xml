<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			xmlns:g="urn:import:com.google.gwt.user.client.ui"
			xmlns:v="urn:import:org.sample.gefapp.model.client.view">

	<ui:style>
		.auto {
			width: 100%;
			height: 100%;
			-moz-box-sizing: border-box;
			background: none repeat scroll 0% 0% rgb(51, 51, 51);
			overflow: hidden;
		}
		.header {
			height: 40px;
		}
		.contents {
			width: 100%;
			position: absolute;
			top: 40px;
			bottom: 30px;
			background: none repeat scroll 0% 0% white;
			overflow: hidden;
			-moz-user-select: none;
		}
		.footer {
			position: absolute;
			bottom: 0px;
			left: 0px;
			height: 30px;
			right: 0px;
			background: none repeat scroll 0% 0% rgb(245, 245, 245);
			border-top: 1px solid rgb(190, 190, 190);
		}
	</ui:style>

	<g:HTMLPanel styleName="main">
		<g:HTMLPanel styleName="content">
			<v:DiagramControlView ui:field="controlPanel"></v:DiagramControlView>
<!-- 			<v:SidebarView ui:field="sideBarPanel"></v:SidebarView> -->
			<v:DiagramView ui:field="diagramPanel"></v:DiagramView>
		</g:HTMLPanel>
	</g:HTMLPanel>

</ui:UiBinder>
